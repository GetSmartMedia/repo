<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.program.kodimaster.notifications" version="1.0.1"
       name="KodiMaster Notifications" provider-name="kodimaster.com">
  <requires>
  	<import addon="xbmc.python" version="2.1.0"/>
  	<import addon="script.module.addon.common" optional="true" />
  </requires>
  <extension point="xbmc.python.script" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="service.py" start="startup">
  </extension>
  <extension point="xbmc.addon.metadata">
  	<summary>KODIMASTER NOTIFICATIONS</summary>
  	<description>Receive Important KodiMaster Notifications. Unsubscribe within Add-on Settings.</description>
  	<disclaimer>We take no responsibility for any problems this plugin might in any way, form, shape or size cause. Modified code from the TVADDONS.AG Notification add-on.</disclaimer>
  	<language>en</language>
  	<platform>all</platform>
  	<forum>http://www.kodimaster.com/forum</forum>
  	<website>http://www.kodimaster.com</website>
  	<source></source>
  	<email></email>
  </extension>
</addon>

<addon id="plugin.program.kodimasterwizard" name="[COLOR gold]KodiMaster Wizard[/COLOR]" version="2.0.1" provider-name="KodiMaster">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">KodiMaster Wizard</summary>
    <description lang="en">Use this wizard to install the best Kodi builds available!.  For help or info please visit http://www.kodimaster.com</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.coldkeys" name="ColdKeys Repo" version="1.0.2" provider-name="Coldkeys">
	<extension point="xbmc.addon.repository" name="ColdKeys Repository">
		<info compressed="false">https://raw.githubusercontent.com/KodiColdkeys/coldkeys-addons/master/repository/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/KodiColdkeys/coldkeys-addons/master/repository/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.githubusercontent.com/KodiColdkeys/coldkeys-addons/master/repository/zips</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>The Coldkeys Repo</summary>
		<description>Download and install addons from the Coldkeys Repository</description>
		<platform>all</platform>
	</extension>
</addon>

    <addon id="repository.kaosbox2" name="KAOSbox Repo" version="2.0.1" provider-name="KAOSbox">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="KAOSbox Repo">
            <info compressed="false">https://raw.githubusercontent.com/KAOSbox/KAOSbox-Repo/master/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/KAOSbox/KAOSbox-Repo/master/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/KAOSbox/KAOSbox-Repo/master/zips/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>Official New Repo for the KAOSbox (www.kaosbox.tv)</summary>
            <description>Download and install addons for the KAOSbox (www.kaosbox.tv)</description>
            <platform>all</platform>
    </extension>
</addon>

<addon id="script.kodimastermaintenance"
